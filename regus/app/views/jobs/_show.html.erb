                    </tr>
                    <tr>
                      <td id="job_info"><strong>Website</strong></td>
                      <td id="job_info"> <%= @job.company.website %> </td>
                    </tr>
                  </table>
                </div> <!-- closing table -->
              </div> <!-- closing columns -->

