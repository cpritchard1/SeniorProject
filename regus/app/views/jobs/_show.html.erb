              <div class="large-4 columns">
                <div class="label_style">
                  <h4 id="label_style">Jobsite</h4>
                </div>
                <div class="table">
                  <table id="job_info">
                    <tr>
                      <td id="job_info" class="test"><strong>Name</strong></td>
                      <td id="job_info"> <%= @job.jobsite.name %> </td>
