                      <td id="job_info"> <%= @job.jobsite.state %> </td>
                    </tr>
                    <tr>
                      <td id="job_info"><strong>Zip</strong></td>
                      <td id="job_info"> <%= @job.jobsite.zip %> </td>
                    </tr>
                  </table>
                </div> <!-- closing table -->

                <% if @job.jobsite.full_address.present? %>
                  <div class="row">
                    <div class="small-12 columns">
                      <p><a data-open="exampleModal1" class="small button expanded">View on map</a></p>
                    </div>
                  </div>

                  <div class="reveal" id="exampleModal1" data-reveal data-close-on-click="true" data-animation-in="fade-in" data-animation-out="fade-out">
                    <h4 id="job"><%=@job.jobsite.name%></h4>
                    <div class="map">
                      <iframe width="700" 
                            height="450" 
                            frameborder="0" 
                            style="border:0"
                            src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDBvzq5WsidARhAZ0821MB1iAMTPnHiamI&zoom=18&q=<%=@job.jobsite.full_address%>" 
                            allowfullscreen>
                      </iframe>
                    </div>
                    <button class="close-button" data-close aria-label="Close modal" type="button">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                <% end %>

              </div> <!-- closing columns -->
            </div> <!-- closing row -->

