            <div class="row"> 
              <div class="large-3 small-4 columns" >
                <div class="job_links">
                  <h4 id="job"> <%="Job ID: #{@job.id}"%> </h4>
                </div>
              </div>

              <div class="large-8 small-8 columns end">
                <strong> Created On: </strong>
                <span id="job"><%= @job.date.strftime("%I:%M %p, %b %d %Y") %></span> <br>

                <strong> Created By: </strong>
                <span id="job"><%= @job.user.username %></span> <br>
              </div>

            </div>
            <br>

