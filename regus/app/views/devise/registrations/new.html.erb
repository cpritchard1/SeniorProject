<style>
    html, body
    {
      height: 100%;
      padding: 0;
      margin: 0;
      background: #808080
    }
    .page_padding
    {
      padding-bottom: 5%;
      min-height: 100%;
      width: 90%;
      margin: 0 auto;
      box-shadow: 0px 45px 50px black;
      background: white;
      overflow: hidden;
    }
</style>

<div class="signup_page_format">

<%= link_to image_tag("regas.png"), root_path %><br><br>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.text_field :fname, autofocus: true, placeholder: "First Name" %>
    </div>

    <div class="field">
      <%= f.text_field :lname, placeholder: "Last Name" %>
    </div>

    <div class="field">
      <%= f.text_field :username, placeholder: "Username" %>
    </div>

    <div class="field">
      <%= f.text_field :phone, placeholder: "Phone" %>
    </div>

    <div class="field">
      <%= f.email_field :email, placeholder: "Email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password (8 characters minimum)" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
    </div>

    <div class="check_box">
      <%= f.check_box :admin %>
      <%= f.label "Admin" %>
      <%= f.check_box :rgroup %>
      <%= f.label "Regus Group" %>
      <%= f.check_box :rlab %>
      <%= f.label "Regus Labs" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "expanded button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
