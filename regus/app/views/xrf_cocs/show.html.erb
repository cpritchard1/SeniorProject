<script>

$(document).ready(function () {
    // will call refreshPartial every 3 seconds
    setInterval(refreshPartial, 10000)

});

// calls action refreshing the partial
function refreshPartial() {
  $.ajax({
    url: "reports/reload/" + "<%= @xrf_coc.id %>"
 })
}

</script>



